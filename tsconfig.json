{
  "compilerOptions": {
	"baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // "moduleResolution": "bundler",		//in baese error ya warning baraye import az node_module mishe
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
	  "@/components/*": ["components/*"],
	  "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
	".",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
	"*.ts",
	"src",
    ".next/types/**/*.ts",
    "app/react-app-env.d.ts",
    "app/server.js"
, "app/components/common/Footer.js", "app/components/common/header.js", "app/components/common/Middle.js", "app/components/MidCom/CommentsSlider.js", "app/components/MidCom/ServicesMe.js"  ],
  "exclude": [
    "node_modules"
  ]
}
